{
	"printWidth": 60,
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxBracketSameLine": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"htmlWhitespaceSensitivity": "strict",
	"importOrder": [
		"^components/ui/(.*)$",
		"^components/screens/(.*)$",
		"^i18n/(.*)$",
		"^helpers/(.*)$",
		"^variables/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": false
}
